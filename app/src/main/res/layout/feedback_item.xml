<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/menu_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/feedback_good"
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:srcCompat="@android:drawable/ic_menu_add"/>
        <ImageView
            android:id="@+id/feedback_bad"
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:srcCompat="@android:drawable/ic_menu_add"/>

        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/feedback_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Андрюшка"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_gravity="bottom|start"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_gravity="end">
        <TextView
            android:id="@+id/feedback_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18 ноября 2к16"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_gravity="bottom"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/feedback_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Это самый обычный отзыв. Обычнее этого отзыв не найти, к сожалению. Перевелись нынче нормальные отзывы"/>

</FrameLayout>